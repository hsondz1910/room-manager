<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textRoomTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa thông tin phòng"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <ImageView
        android:id="@+id/editRoomImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/placeholder_img"
        android:scaleType="centerCrop"
        android:contentDescription="Ảnh phòng"/>

    <Button
        android:id="@+id/btnChooseImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn ảnh"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editRoomTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Tên phòng"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editRoomPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Giá phòng"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editRoomAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Địa chỉ phòng"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textSize="16sp" />
</LinearLayout>
