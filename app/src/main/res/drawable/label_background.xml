<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_selected="true">
    <shape>
        <solid android:color="@color/default_background_color" /> <!-- Nền không đổi -->
        <stroke android:width="2dp" android:color="@color/selected_background_color" /> <!-- Viền khi được chọn -->
        <corners android:radius="8dp" /> <!-- Bo góc -->
    </shape>
</item>


